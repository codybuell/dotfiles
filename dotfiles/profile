case `basename $SHELL` in
  bash )
    . ~/.shell/bash
    . ~/.shell/path
    . ~/.shell/function
    . ~/.shell/alias
    . ~/.shell/tmux
    . ~/.shell/color
    . ~/.shell/export
    which brew > /dev/null 2>&1
    [[ $? -eq 0 ]] && {
      if [ -f $(brew --prefix)/etc/bash_completion ]; then
        . $(brew --prefix)/etc/bash_completion
        . ~/.shell/complete
      fi
    }
    ;;
  zsh )
    ;;
esac
