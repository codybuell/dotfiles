[user]
  name = {{ GitUsername }}
  email = {{ Email }}
  signingkey = {{ GitSignKey }}
[core]
  editor = /usr/local/bin/nvim
  excludesfile = ~/.cvsignore
[credential]
  helper = osxkeychain
[gpg]
  program = /usr/local/bin/gpg
[init]
  defaultBranch = master
[commit]
  gpgsign = true
[status]
  submoduleSummary = true
[pull]
  ff = only
[push]
  default = current
[merge]
  tool = vimdiff
  conflictStyle = diff3
[diff]
  tool = vimdiff
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --date=relative
  lgs = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --date=relative --stat
  co = checkout
[color]
  ui = true
[color "status"]
  added = green
  changed = red
  untracked = blue
  deleted = magenta
  branch = yellow
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[rerere]
  enabled = true
[rebase]
  instructionFormat = (%as %an <%ae>) %s
[log]
  date = short
[format]
  pretty = format:%C(yellow)%h %Cblue%>(11)%ad  %Cgreen%<(16,trunc)%aN%Cred%d %Creset%s
