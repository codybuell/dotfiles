[user]
  name = {{ GitUsername }}
  email = {{ Email }}
	signingkey = {{ GitSignKey }}
[core]
  editor = /usr/local/bin/nvim
  excludesfile = ~/.cvsignore
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --date=relative
  lgs = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --date=relative --stat
  co = checkout
[color]
  ui = true
[color "status"]
  added = green
  changed = red
  untracked = blue
  deleted = magenta
  branch = yellow
[credential]
	helper = osxkeychain
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[status]
	submoduleSummary = true
[gpg]
	program = /usr/local/bin/gpg
[pull]
	ff = only
