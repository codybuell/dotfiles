defaults
port 587
protocol smtp
auth on
tls on
tls_trust_file /usr/local/etc/openssl/cert.pem
tls_trust_file /etc/ssl/certs/ca-bundle.crt

account home
host {{ HomeEmailSmtp }}
from {{ HomeEmailAddress }}
user {{ HomeEmailUsername }}
passwordeval ~/.shell/bin/get-keychain-pass {{ HomeEmailKeychain }} {{ HomeEmailHost }}
syslog LOG_MAIL

account work
host {{ WorkEmailSmtp }}
from {{ WorkEmailAddress }}
user {{ WorkEmailUsername }}
passwordeval ~/.shell/bin/get-keychain-pass {{ WorkEmailKeychain }} {{ WorkEmailHost }}
syslog LOG_MAIL

account client
host {{ ClientEmailSmtp }}
from {{ ClientEmailAddress }}
user {{ ClientEmailUsername }}
passwordeval ~/.shell/bin/get-keychain-pass {{ ClientEmailKeychain }} {{ ClientEmailHost }}
syslog LOG_MAIL

account default : {{ DefaultEmailAccount }}
