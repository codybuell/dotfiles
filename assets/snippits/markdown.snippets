endsnippet

###############################
#                             #
#   Sections and Paragraphs   #
#                             #
###############################

snippet s "# section" b
${1:Section Name}
${1/./=/g}$0
endsnippet

snippet ss "## sub section" b
${1:Section Name}
${1/./-/g}$0
endsnippet

snippet sss "### subsub section" b
### ${1:Section Name}$0
endsnippet

snippet ssss "#### paragraph" b
#### ${1:Paragraph Name}$0
endsnippet

snippet sssss "##### sub paragraph" b
##### ${1:Paragraph Name}$0
endsnippet

#######################
#                     #
#   Text formatting   #
#                     #
#######################

snippet _ "italics"
_$1_$0
endsnippet

snippet __ "bold"
__$1__$0
endsnippet

snippet * "italics"
*${1:${VISUAL}}*$0
endsnippet

snippet ** "bold"
**${1:${VISUAL}}**$0
endsnippet

snippet *** "bold italics"
***${1:${VISUAL}}***$0
endsnippet

####################
#                  #
#   Common stuff   #
#                  #
####################

snippet td "github style todo list item" b
- [ ] $0
endsnippet

snippet t "github style todo list item for prepop list"
[ ] $0
endsnippet

snippet a "link to something"
[${1:${VISUAL:Text}}](${3:http://${2:www.url.com}})$0
endsnippet

snippet img "image"
![${1:pic alt}](${2:path}${3/.+/ "/}${3:opt title}${3/.+/"/})$0
endsnippet

snippet ilc "inline code"
\`$1\`$0
endsnippet

snippet cbl "codeblock" b
\`\`\`
$1
\`\`\`
$0
endsnippet

snippet refl "reference link"
[${1:${VISUAL:Text}}][${2:id}]$0

[$2]:${4:http://${3:www.url.com}} "${5:$4}"
endsnippet

snippet fnt "footnote"
[^${1:${VISUAL:Footnote}}]$0

[^$1]:${2:Text}
endsnippet

# usage: tbwxh ie tb2x3
pre_expand "create_table(snip)"
snippet "tb(\d+x\d+)" "customizable table" br
endsnippet

# vim:ft=snippets:
